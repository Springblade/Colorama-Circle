<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml" 
           fx:controller="main.DifficultyController"
           style="-fx-background-color: linear-gradient(to bottom right, #FFFFFF, #FFF8E7);">
           
    <VBox spacing="0" alignment="CENTER">
        <VBox alignment="CENTER" spacing="20">
            <VBox.margin>
                <Insets top="50" bottom="50"/>
            </VBox.margin>
            
            <Button text="LEVEL 1" 
                    onAction="#handleEasy"
                    focusTraversable="false"
                    style="-fx-min-width: 400;
                           -fx-min-height: 80;
                           -fx-background-color: #4CAF50;
                           -fx-text-fill: white;
                           -fx-font-size: 32px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 40;
                           -fx-cursor: hand;">
                <effect>
                    <DropShadow color="#00000066"
                               radius="15"
                               spread="0.2"
                               offsetX="3"
                               offsetY="3"/>
                </effect>
            </Button>

            <Button text="LEVEL 2" 
                    onAction="#handleMedium"
                    focusTraversable="false"
                    style="-fx-min-width: 400;
                           -fx-min-height: 80;
                           -fx-background-color: #FFA500;
                           -fx-text-fill: white;
                           -fx-font-size: 32px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 40;
                           -fx-cursor: hand;">
                <effect>
                    <DropShadow color="#00000066"
                               radius="15"
                               spread="0.2"
                               offsetX="3"
                               offsetY="3"/>
                </effect>
            </Button>

            <Button text="LEVEL 3" 
                    onAction="#handleHard"
                    focusTraversable="false"
                    style="-fx-min-width: 400;
                           -fx-min-height: 80;
                           -fx-background-color: #f44336;
                           -fx-text-fill: white;
                           -fx-font-size: 32px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 40;
                           -fx-cursor: hand;">
                <effect>
                    <DropShadow color="#00000066"
                               radius="15"
                               spread="0.2"
                               offsetX="3"
                               offsetY="3"/>
                </effect>
            </Button>
        </VBox>
        
        <!-- Back button -->
        <VBox alignment="CENTER">
            <VBox.margin>
                <Insets bottom="30"/>
            </VBox.margin>
            
            <Button text="â¬… BACK" 
                    onAction="#handleBack"
                    focusTraversable="false"
                    style="-fx-min-width: 200;
                           -fx-min-height: 50;
                           -fx-background-color: #2C3E50;
                           -fx-text-fill: white;
                           -fx-font-size: 20px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 25;
                           -fx-cursor: hand;">
                <effect>
                    <DropShadow color="#00000066"
                               radius="10"
                               spread="0.1"
                               offsetX="2"
                               offsetY="2"/>
                </effect>
            </Button>
        </VBox>
    </VBox>
</StackPane>